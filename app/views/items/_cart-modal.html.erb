                  <input type="text" class="form-control" style="width: 293px; margin: 8px 0px" id="validationCustom01" placeholder="Tu dirección" required>
                </div>
              </div>
              <div class="col-12">
                <select class="custom-select" style="width: 293px; margin: 8px 0px" id="validationDefault04" required>
