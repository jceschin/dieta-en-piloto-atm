<div class="modal fade cart-modal" tabindex="-1" id="cartModal" role="dialog"
  aria-labelledby="cartModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">

      <div class="modal-header" style="height: 60px">
        <h2 class="cart-modal-header mx-0 px-0" style="font-size: 24px">Mi pedido</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <% if !order.nil? %>

          <!-- form route? -->
          <%= form_for [order], html: {class: "cart-modal-form"} do |f| %>
            <% @order.items_and_qty.each do |key, item| %>
              <div class="d-flex flex-column align-items-center">
                <div class="d-flex align-items-center justify-content-between cart-modal-item w-100">
                  <h3 class="px-0" style="font-size: 16px"><%= item[0].name %></h3>
                  <h3 class="px-0" style="font-size: 16px" <%= "id=item-qty-#{item[0].id}-price" %> >$<%= item[0].price %></h3>
                </div>
                <div class="inc-dec d-flex align-items-center">
                  <%= link_to "-", "#", class: "btn-inc-dec dec hvr-grow-s" %>
                  <input <%= "id=item-qty-#{item[0].id}" %>
                   class="input"
                   type="text" name="quantity" value= <%= item[1] %> >
                  <%= link_to "+", "#", class: "btn-inc-dec inc hvr-grow-s" %>
                </div>
              </div>
            <% end %>
            <div class="d-flex justify-content-between cart-modal-price">
              <h3 class="px-0" style="font-size: 16px">Total:</h3>
              <h3 class="px-0" style="font-size: 16px" id="cart-total-price" >$<%= @order.total_price %></h3>
            </div>
            <form>
              <div class="form-group">
                <input class="form-control" style="margin-top: 14px" id="exampleFormControlInput1" placeholder="Tu dirección">
              </div>
              <div class="form-group">
                <select class="form-control" id="exampleFormControlSelect1" placeholder="Forma de pago">
                  <option selected disabled value="">Forma de pago</option>
                  <option>Efectivo</option>
                  <option>Tarjeta</option>
                </select>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-green-order">Confirmar</button>
              </div>
            </form>
            <!--<div class="input-group px-5 py-3">
              <input aria-label="Example select with button addon" placeholder="Tu dirección" style="border: 1px solid #ced4da; width: 250px; height: calc(1.5em + 0.75rem + 2px); border-radius: 4px"></input>
            </div>
            <div class="input-group px-5 py-3">
              <select class="custom-select" id="inputGroupSelect04" aria-label="Example select with button addon">
                <option selected>Forma de pago</option>
                <option value="1">Efectivo</option>
                <option value="2">Tarjeta</option>
              </select>
            </div>-->
