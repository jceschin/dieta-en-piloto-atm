<div class="container">
  <div class="row">
    <div class="col-12 logo">
      <%= image_tag "Logo2.png", alt: "Logo" %>
    </div>
    <div class="col-12">
      <!------------------------------------------------Carousel---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li style='background-color:#71cc34' data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li style='background-color:#71cc34' data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li style='background-color:#71cc34' data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class='carousel-image' src='https://images.unsplash.com/photo-1543352634-a1c51d9f1fa7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=100&q=80' style="box-shadow: 0 0 15px rgba(0,0,0,0.2);filter: brightness(60%); border-radius: 8px" alt="...">
            <div class="carousel-caption d-default-block">
              <div class="text-div d-flex align-items-center justify-content-center">
                <h1>¿Querés<strong style="color:#71cc34"> comer saludable</strong> pero<strong style="color:#71cc34"> no tenés tiempo?</strong></h1>
                <!--<h1>¿Te gustaría<strong style="color:#71cc34"> comer saludable</strong> pero te<strong style="color:#71cc34"> falta tiempo?</strong></h1>-->
                <!--<h1>¿Querés <strong style="color:#71cc34">ahorrar</strong> <br>tiempo y <strong style="color:#71cc34">comer</strong> <br><strong style="color:#71cc34">saludable?</strong></h1>-->
              </div>
            </div>
          </div>
          <div class="carousel-item ">
            <img class='carousel-image' src='https://images.unsplash.com/photo-1543352634-a1c51d9f1fa7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=100&q=80' style="filter: brightness(60%); border-radius: 8px" alt="...">
            <div class="carousel-caption d-default-block">
              <div class="text-div d-flex align-items-center justify-content-center">
                <h1>¡Nosotros<strong style="color:#71cc34"> te ayudamos!</strong></h1>
                <!--<h1><strong style="color:#71cc34">¡Gestionamos tu dieta</strong> por vos!</h1>-->
              </div>
            </div>
          </div>
          <div class="carousel-item ">
            <img class='carousel-image' src='https://images.unsplash.com/photo-1543352634-a1c51d9f1fa7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=100&q=80' style="filter: brightness(60%); border-radius: 8px" alt="...">
            <div class="carousel-caption d-default-block">
              <div class="text-div d-flex align-items-center justify-content-center">
                <h1>Definí<strong style="color:#71cc34"> metas</strong>  <i class="fas fa-check"></i><br>Elejí<strong style="color:#71cc34"> platos</strong>  <i class="fas fa-check"></i><br>Comprá  <i class="fas fa-check"></i></h1>
              </div>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        </div>
        <div id="btn-override" >
          <%= link_to "Nuestras sugerencias", items_path, class:"btn btn-success btn-block" %>
          <% if user_signed_in? %>
            <%= link_to "Tus objetivos del día", daily_target_path(current_user.daily_target.id), class:"btn btn-warning btn-block mt-1" %>
          <% end %>
      </div>
      <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
    </div>
  </div>
</div>

